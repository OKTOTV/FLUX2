{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'login', 'dropdown': ''} %}
{% endblock %}
{% block body_main %}
<div class="container login">
  <header class="page-header"><h1 class="form-signin-heading">{{ 'bprs_user.login.header'|trans }}</h1></header>
  <form class="form-signin" action="{{ path('bprs_user_login_check') }}" method="post">
    <fieldset>
        <div class="form-group">
            <label for="name" class="sr-only">{{ 'bprs_user.login.username_label'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'bprs_user.login.username_label'|trans }}" autofocus required />
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">{{ 'bprs_user.login.password_label'|trans }}</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'bprs_user.login.password_label'|trans }}" required />
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" checked /> {{ 'flux2.login.remember_me_label'|trans }}
            </label>
        </div>
        <div class="form-group">
            <p><input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></p>
            <p><a href="{{ path('bprs_user_iforgot') }}">{{ 'bprs_user.login.reset_password'|trans }}</a><p>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">{{ 'bprs_user.login.submit'|trans }}</button>
        </div>
    </fieldset>
    <fieldset class="registry">
        <div class="form-group">
            <p class="button-container"><a href="{{ path('register') }}" class="btn btn-default but-full">{{ 'oktothek.login_register'|trans }}</a></p>
        </div>
    </fieldset>
  </form>
</div>
{% endblock %}
