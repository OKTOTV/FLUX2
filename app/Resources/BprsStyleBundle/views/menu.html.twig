                                <a href="{{ path('bprs_asset_list') }}">{{ 'bprs_asset.menu'|trans|raw }}</a>
                            </li>
                        {% endif %}
                        <li role="separator" class="divider"></li>
                        <li><a href="{{ path('bprs_user_logout') }}">{{'oktothek.menu_user_logout'|trans|raw }}</a><li>
                    </ul>
                </li>
                {% if is_granted('ROLE_OKTOLAB_USER') %}
