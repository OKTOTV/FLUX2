                                <a href="{{ path('bprs_user_backend_users') }}">{{ 'bprs_user.menu'|trans|raw }}</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_BPRS_APPLINK_BACKEND') %}
