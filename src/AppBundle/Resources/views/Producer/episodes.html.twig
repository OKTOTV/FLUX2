{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'producer', 'dropdown': 'user_menu'} %}
{% endblock %}
{% set body_class = "producer" %}
{% block body_main %}

{% include 'AppBundle::Producer/producerHeader.html.twig' with {'active': 'producer_episodes', 'series': series} %}
<section class="tabs-content">
<p class="subheadline">{{ 'oktothek.series_producer_episode_text'|trans }}</p>


<div class="navigation">
    {{ knp_pagination_render(episodes) }}
</div>
<ul class="list-group">
    {% for episode in episodes %}
    <li class="row pin">
        <a href="{{ path('oktothek_channel_episode', {'uniqID': episode.uniqID})}}" class="list-group-item">
            <div class="col-md-2 col-lg-2 col-sm-3 col-xs-12 pin">
                <img class="img img-responsive" src="{{ episode.posterframe(true)|thumb(135,240)}}" />
            </div>
            <div class="col-md-10 col-lg-10 col-sm-9 col-xs-12">
                <h3 class="list-group-item-heading">{{ episode.name }}</h3>
                <p class="list-group-item-text">{{ episode.description }}</p>
            </div>
        </a>
    </li>
    {% endfor %}
</ul>
<div class="navigation">
    {{ knp_pagination_render(episodes) }}
</div>
</section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/producer.css') }}" rel="stylesheet" />
{% endblock %}