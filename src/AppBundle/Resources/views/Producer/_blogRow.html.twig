{% set text_only = true %}
{% if post.assets is not empty %}
    {% if post.assets[0]|isImage %}
        {% set text_only = false %}
    {% endif %}
{% endif %}

<article class="row post">
    {% if text_only == false %}
        <figure class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <a href="{{ path('oktothek_series_edit_blog_post', {'uniqID': series.uniqID, 'post': post.id})}}">
                <img src="{{ post.assets[0]|thumb(220,390) }}" class="img img-responsive" alt="{{ post.name }}"/>
            </a>
        </figure>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    {% else %}
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    {% endif %}
            <p class="tags">
                {% for tag in post.tags %}
                    <a href="{{ path('oktothek_tag_show', {'slug': tag.slug })}}" class="tag">{{ tag.text }}</a>
                {% endfor %}
            </p>
            <header class="page-header">
                <h3><a href="{{ path('oktothek_series_edit_blog_post', {'uniqID': series.uniqID, 'post': post.id})}}">{{ post.name }}</a></h3>
            </header>
            <p>
                {{ post.teaser|nl2br }}
            </p>
        </div>
</article>
