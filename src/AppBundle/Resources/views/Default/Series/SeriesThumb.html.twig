{# used in Tag view #}
<li class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin" title="{{ series.description }}" itemscope itemtype="http://schema.org/Series">
    <figure class="series-pin pin">
        <a href="{{ url|default(path('oktothek_show_series', {'uniqID': series.uniqID})) }}" title="{{ series.name }}" itemprop="thumbnailUrl">
            <img src="{{ series.posterframe|thumb(158,282) }}" class="img-responsive" alt="{{ series.name }}" itemprop="image"/>
        </a>
        <figcaption>
            <a href="{{ url|default(path('oktothek_show_series', {'uniqID': series.uniqID})) }}" title="{{ series.name }}" itemprop="url">
                <h3 itemprop="name">{{ series.name }}</h3>
            </a>
        </figcaption>
    </figure>
</li>
