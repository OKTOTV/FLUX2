{# used in Tag view #}
<li class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin" title="{{ series.description }}">
    <figure class="series-pin pin">
        <a href="{{ url|default(path('oktothek_show_series', {'uniqID': series.uniqID})) }}" title="{{ series.name }}">
            <img src="{{ series.posterframe|thumb(158,282) }}" class="img-responsive" alt="{{ series.name }}"/>
        </a>
        <figcaption>
            <a href="{{ url|default(path('oktothek_show_series', {'uniqID': series.uniqID})) }}" title="{{ series.name }}">
                <h3>{{ series.name }}</h3>
            </a>
        </figcaption>
    </figure>
</li>
