{# used in Tag view #}
<article class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin" title="{{ series.description }}">
    <figure class="series-pin pin">
        <a href="{{ path('oktothek_show_series', {'uniqID': series.uniqID}) }}" title="{{ series.name }} ansehen">
            <img src="{{ series.posterframe|thumb(135,240) }}" class="img-responsive"/>
            <figcaption>
                <h3>{{ series.name }}</h3>
            </figcaption>
        </a>
    </figure>
</article>
