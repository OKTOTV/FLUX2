{% if posts|length > 0%}
    <h2>{{ 'oktolab_series_blog_header'|trans }}</h2>
	<div class="row">
    <div class="col-md-9 col-lg-9 col-sm-9 col-xs-9 news-pin">
{% endif %}
{% for post in posts %}
    <article>{% include 'AppBundle::News/post.html.twig' with {'post': post, 'newsloop': loop.index } %}</article>
{% endfor %}
{% if posts|length > 0%}
    </div>
	<aside class="col-md-3 col-lg-3 col-sm-3 col-xs-3">
	    <div class="aside-inner clearfix">
	        <ul>
                {% for teaser in teasers %}
                    <li>
                        <time pubdate="pubdate">{{ teaser.updatedAt|date('d.m.Y')}}</time>
                        <p><a href="{{ path('oktothek_show_news', {'slug': teaser.slug})}}">{{ teaser.name }}</a></p>
                    </li>
                {% endfor %}
		    </ul>
		</div>
	</aside>
	</div>
{% endif %}
