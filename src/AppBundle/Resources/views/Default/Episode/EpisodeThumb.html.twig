{# used in Tag view #}
<article class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin" title="{{ episode.description }}">
    <figure class="episode-pin pin">
        <a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}" title="{{ episode.name|default('oktothek_episode_thumb_default_title'|trans({'%date%': episode.firstRanAt|default(episode.onlineStart)|date('D, d.m.Y')})) }} ansehen"><img src="{{ episode.posterframe(true)|thumb(158,282) }}" class="img-responsive" alt="{{ episode.name|default('oktothek_episode_thumb_default_title'|trans({'%date%': episode.firstRanAt|default(episode.onlineStart)|date('D, d.m.Y')})) }} - {{ episode.series.name|default('') }}"/></a>
        <div class="pin-icon"><span class="glyphicon glyphicon-heart"></span> {{ episode.users|length }}</div>
        <figcaption>
            <h3><a href="{{ path('oktothek_show_series', {'uniqID': episode.series.uniqID}) }}" title="{{ episode.series.name|default('') }}">{{ episode.series.name|default('') }}</a></h3>
            <p><a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}" title="{{ episode.name|default('oktothek_episode_thumb_default_title'|trans({'%date%': episode.firstRanAt|default(episode.onlineStart)|date('D, d.m.Y')})) }} ansehen">{{ episode.name|default('oktothek_episode_thumb_default_title'|trans({'%date%': episode.onlineStart|date('D, d.m.Y')})) }}</a></p>
            </figcaption>
        </figure>
</article>