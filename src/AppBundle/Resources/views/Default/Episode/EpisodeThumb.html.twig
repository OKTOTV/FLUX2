{# used in Tag view #}
<article class="col-md-6 col-lg-6 col-sm-8 col-xs-12 pin" title="{{ episode.description }}">
    <a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}">
    <figure class="episode-pin pin">
        <img src="{{ episode.posterframe(true)|thumb(158,282) }}" class="img-responsive"/>
        <figcaption>
            <h3>{{ episode.series.name }}</h3>
            <p>{{ episode.name }}</p>
            <p><span class="glyphicon glyphicon-heart"></span> {{ episode.users|length }}</p>
        </figcaption>
    </figure>
    </a>
</article>
