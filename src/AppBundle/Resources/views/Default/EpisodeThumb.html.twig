<div class="col-md-3 col-lg-3 col-sm-8 col-xs-12 pin" data-toggle="tooltip" title="{{ episode.description }}">
    <a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}">
        <div class="episode-pin">
        <img src="{{ episode.posterframe|thumb(135,240) }}" class="img-responsive"/>
            <h2>{{ episode.series.name }}</h2>
            <p>{{ episode.name }}</p>
        </div>
    </a>
</div>
