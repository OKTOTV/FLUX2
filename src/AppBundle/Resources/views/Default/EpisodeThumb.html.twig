<article class="col-md-3 col-lg-3 col-sm-8 col-xs-12 pin" data-toggle="tooltip" title="{{ episode.description }}">
    <a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}">
        <div class="episode-pin pin">
            <img src="{{ episode.posterframe|thumb(135,240) }}" class="img-responsive"/>
			<div>
                <h3>{{ episode.series.name }}</h3>
                <p>{{ episode.name }}</p>
                <p><span class="glyphicon glyphicon-heart"></span> {{ episode.users|length }}</p>
			</div>
        </div>
    </a>
</article>
