{% set collapse_id = collapse_id|default('collapse_rand_'~ random()) %}

<ul class="row">
    {% for playlist in playlists|slice(0,4) %}
        {% include "AppBundle:Default/Playlist:PlaylistThumb.html.twig" %}
    {% endfor %}
</ul>
{% if playlists|length > 4 %}
    <ul class="row collapse" id="{{ collapse_id }}">
        {% for playlist in playlists|slice(4,3) %}
            {% include "AppBundle:Default/Playlist:PlaylistThumb.html.twig" %}
        {% endfor %}
        {% if playlists|length > 7 %}
        <li class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin more">
            <article>
                <figure class="episode-pin pin">
                    <a href="{{ pager_url|default(path('oktothek_playlist_index')) }}">
                        {{ pager_link_text|default('oktothek_more_results'|trans|raw)}}
                    </a>
                </figure>
            </article>
        </li>
        {% endif %}
    </ul>
    <a href="{{ collapse_link|default('#'~collapse_id) }}" class="pull-right more hidden-xs" title="" data-toggle="collapse" aria-controls="{{collapse_id}}" data-lesstrans='{{collapse_link_text_less|default('oktothek.newest_playlists_show_less'|trans)|raw }}'
 data-moretrans='{{ collapse_link_text|default('oktothek.newest_playlists_show_more'|trans)|raw }}'>
        {{ 'oktothek.newest_playlists_show_more'|trans|raw }}
    </a>
    <a href="{{ collapse_link|default('#'~collapse_id) }}" class="right more visible-xs-block" title="" data-toggle="collapse" aria-controls="{{collapse_id}}" data-lesstrans='<span class="icon">-</span>'
 data-moretrans='<span class="icon">+</span>'><span class="icon">+</span></a>
{% endif %}
