<li class="col-md-3 col-lg-3 col-sm-8 col-xs-12 pin" data-toggle="tooltip" title="{{ playlist.description }}">
    <figure class="playlist-pin pin" itemscope itemtype="http://schema.org/VideoGallery">
        {% if playlist.items is not empty %}
            <a href="{{ path('oktothek_show_playlist', {'uniqID': playlist.uniqID}) }}" title="{{ playlist.name }} ansehen" itemprop="url">
                <meta itemprop="thumbnailUrl" content="{{ playlist.items[0].episode.posterframe(true)|thumb(135,240) }}" />
                <img src="{{ playlist.items[0].episode.posterframe(true)|thumb(135,240) }}" class="img-responsive" alt="{{ 'oktothek_playlist_thumb_img_title'|trans({'%playlist%': playlist.name}) }}" itemprop="image" />
            </a>
        {% endif %}
        <figcaption>
            <h3 itemprop="name"><a href="{{ path('oktothek_show_playlist', {'uniqID': playlist.uniqID}) }}" title="{{ playlist.name }} ansehen">{{ playlist.name }}</a></h3>
            <p>
                {% if playlist.user %}
                <meta itemprop="author" content="{{ playlist.user.username }}">
                <a href="{{ path('oktothek_show_user', {'username': playlist.user.username}) }}" title="{{ 'oktothek_playlist_thumb_creator_title'|trans({'%user%': playlist.user.username}) }}">
                    {{ 'oktothek_playlist_thumb_creator'|trans({'%user%': playlist.user.username}) }}
                </a>
                {% endif %}
            </p>
        </figcaption>
    </figure>
</li>
