{% extends "BprsStyleBundle::layout.html.twig" %}

{% block title %}{{ name|default('OKTO')~' | '~ 'oktothek.series_blog_header'|trans({'%series%': series.name}) }}{% endblock %}
{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "series fullscreen-images" %}
{% block body_main %}

<header class="page-header">
    <h1>{{ 'oktothek.series_blog_header'|trans({'%series%': series.name}) }}</h1>
    <p>
        <a href="{{ path('oktothek_show_series', {'uniqID': series.uniqID }) }}" class="btn btn-default">{{ 'oktothek.series_back_to_root'|trans }}</a>
    </p>
</header>
<section class="blog">
<div class="row">
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>
        <div class="row">
            <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12 news-pin">
                {% for post in posts %}
                    {% include 'AppBundle:News:_newsRow.html.twig' with {'post': post, 'newsloop': loop.index } %}
                    <div class="comments comment-pager">
                        {{ render(controller("AppBundle:Comment:commentPager", {'uniqID': post.uniqID, 'page': 1})) }}
                    </div>
                {% endfor %}
            </div>
            <aside class="col-md-3 col-lg-3 col-sm-3 hidden-xs">
                <div class="aside-inner clearfix">
                    <ul>
                        {% for teaser in teasers %}
                            <li>
                                <time pubdate="pubdate">{{ teaser.updatedAt|date('d.m.Y')}}</time>
                                <p><a href="{{ path('oktothek_show_series_blogpost', {'uniqID': series.uniqID, 'slug': teaser.slug})}}">{{ teaser.name }}</a></p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </aside>
        </div>
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>
</div>
</section>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/news.css') }}" rel="stylesheet" />
{% endblock %}
