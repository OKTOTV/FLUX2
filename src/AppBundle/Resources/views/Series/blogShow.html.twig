{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}
{% set body_class = "series blog news" %}
{% block body_main %}
<div class="blog col-md-8 col-lg-8 col-sm-12 col-xs-12">
    <header class="page-header">
        <h1>{{ series.name}}</h1>
        <p>
            <a href="{{ path('oktothek_show_series', {'uniqID': series.uniqID }) }}" class="more pull-left"><span class="icon"><span class="glyphicon glyphicon-menu-left"></span></span>{{ 'oktothek.series_back_to_root'|trans }}</a>
        </p>
    </header>
    <section>
        {% set text_only = true %}
        {% if post.assets is not empty %}
            {% if post.assets[0]|isImage %}
                {% set text_only = false %}
            {% endif %}
        {% endif %}

        <article class="row post">
            {% if text_only == false %}
                <figure class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <a href="{{ path( 'oktothek_show_series_blogpost', {'slug': post.slug, 'uniqID': series.webtitle})}}">
                        <img src="{{ post.assets[0]|thumb(220,390) }}" class="img img-responsive" alt="{{ post.name }}"/>
                    </a>
                </figure>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            {% else %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {% endif %}
                    <p class="tags">
                        {% for tag in post.tags %}
                            <a href="{{ path('oktothek_tag_show', {'slug': tag.slug })}}" class="tag">{{ tag.text }}</a>
                        {% endfor %}
                    </p>
                    <header class="page-header">
                        <h3><a href="{{ path( 'oktothek_show_series_blogpost', {'slug': post.slug, 'uniqID': series.uniqID})}}">{{ post.name }}</a></h3>
                    </header>
                    <p>
                        {{ post.teaser|nl2br }}
                    </p>
                    <p class="misc">
                        <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#collape-{{ newsloop|default('1') }}" aria-expanded="false" aria-controls="collape-{{ newsloop|default('1') }}" id="ButtonShare" data-uniqID="#" title="{{ 'oktothek_share_header'|trans }}"><span class="share-btn-text">{{ 'oktothek_share_header'|trans }}</span><span class="visible-xs-inline glyphicon glyphicon-share-alt"></span></button>
                    </p>
                </div>
            {% include "AppBundle:Series/Blog:_shareCollapse.html.twig" %}
        </article>

    </section>
    <section class="comments comment-pager">
        {{ render(controller("AppBundle:Comment:commentPager", {'uniqID': post.uniqID, 'page': 1})) }}
    </section>
</div>
<aside class="col-md-4 col-lg-4 hidden-sm hidden-xs">
    <div class="aside-inner clearfix">
        <ul>
            {% for teaser in teasers %}
                <li>
                    <time pubdate="pubdate" datetime="{{ teaser.updatedAt|date('d.m.Y')}}">{{ teaser.updatedAt|date('D, d.m.Y')}}</time>
                    <p>
                        <a href="{{ path('oktothek_show_series_blogpost', {'uniqID': series.uniqID, 'slug': teaser.slug})}}">{{ teaser.name }}</a>
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>
</aside>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
	<script src="{{ asset('bundles/app/js/javascript_collapse.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
	<link href="{{ asset('bundles/app/css/collapse_windows.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/news.css') }}" rel="stylesheet" />
{% endblock %}
