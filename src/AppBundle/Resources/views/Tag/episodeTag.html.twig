<div class="row">
{% for episode in episodes %}
    {% if loop.first %}
    <article class="col-md-6 col-lg-6 col-sm-12 col-xs-12 pin first" title="{{ episode.description }}">
        <figure class="episode-pin pin">
            <a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}" title="{{ episode.series.name|default('') }} ansehen"><img src="{{ episode.posterframe|thumb(309,550) }}" class="img-responsive"/></a>
		    <div class="pin-icon"><span class="glyphicon glyphicon-heart"></span> {{ episode.users|length }}</div>
		    <figcaption>
                <h3><a href="{{ path('oktothek_show_series', {'uniqID': episode.series.uniqID}) }}" title="{{ episode.series.name|default('') }} ansehen">{{ episode.series.name|default('') }}</a></h3>
                <p><a href="{{ path('oktothek_show_episode', {'uniqID': episode.uniqID}) }}" title="{{ episode.series.name|default('') }} ansehen">{{ episode.name|default('oktothek_episode_thumb_default_title'|trans({'%date%': episode.onlineStart|date('d.m.Y')})) }}</a></p>
			</figcaption>
        </figure>
    </article>
	<div class="col-md-6 col-lg-6 col-sm-12 col-xs-12 pin">
	{% else %}
	{% include "AppBundle:Default:EpisodeThumb.html.twig" %}
	{% endif %}
	{% if loop.last %}
    </div>
    {% endif %}
{% endfor %}
</div>

