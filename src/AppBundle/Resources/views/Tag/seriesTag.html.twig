<div class="row">
    {% for series in seriess %}
        {% if loop.first %}
            <article class="col-md-6 col-lg-6 col-sm-12 col-xs-12 pin first-pin" title="{{ series.description }}">
                <figure class="series-pin pin">
                    <a href="{{ path('oktothek_show_series', {'uniqID': series.uniqID}) }}" title="{{ series.name }}">
                        <img src="{{ series.posterframe|thumb(309,550) }}" class="img-responsive" alt="{{ series.name }}"/>
                    </a>
                    <figcaption>
                        <a href="{{ path('oktothek_show_series', {'uniqID': series.uniqID}) }}" title="{{ series.name }}">
                            <h3>{{ series.name }}</h3>
                        </a>
                    </figcaption>
                </figure>
            </article>
            <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12 small-pins">
        {% else %}
            {% include "AppBundle:Default/Series:SeriesThumb.html.twig" %}
        {% endif %}
    {% endfor %}
    {% set numberofseries = 5 - seriess|slice(0,5)|length %}
    {% for i in 0..numberofseries if i > 0 %}
        <article class="col-md-6 col-lg-6 col-sm-12 col-xs-12 pin empty"><figure><div class="icon-player"><div class="triangle"></div></div></figure></article>
    {% endfor %}
            </div>
</div>
