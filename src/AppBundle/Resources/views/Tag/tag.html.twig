{% extends "BprsStyleBundle::layout.html.twig" %}

{% block title%}{{ name|default('OKTO')~' | '~tag.text }}{% endblock %}
{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "tagpage head-white-color head-transparent-bg fullscreen-background" %}
{% block body %}
	<div id="top"></div>
    <div class="container-fluid">
	    <div class="bg-bleur"></div>
	    <header class="container">
		    <h1>{{ 'oktothek_tag_header'|trans({'%title%': tag.text})}}</h1>
			{% include "AppBundle::Tag/shareTag.html.twig" with {'tag': tag} %}
	    </header>
            {{ render(controller('AppBundle:Tag:episodeTag', {'tag': tag.slug})) }}
            <a href="{{ path('oktothek_tag_episode_page', {'slug': tag.slug}) }}">{{ 'oktothek_tag_more_results'|trans }}</a>
		<section class="container inc-pins">
		    <div id="anchor_series"></div>
		    <h2>Serien</h2>
            {{ render(controller('AppBundle:Tag:seriesTag', {'tag': tag.slug})) }}
            <a href="{{ path('oktothek_tag_series_page', {'slug': tag.slug}) }}">{{ 'oktothek_tag_more_results'|trans }}</a>
		</section>
		<section class="container inc-pins">
		    <div id="anchor_playlists"></div>
		    <h2>Playlisten</h2>
            {{ render(controller('AppBundle:Tag:playlistTag', {'tag': tag.slug})) }}
            <a href="{{ path('oktothek_tag_playlists_page', {'slug': tag.slug}) }}">{{ 'oktothek_tag_more_results'|trans }}</a>
		</section>
		<section class="container">
		    <div id="anchor_posts"></div>
		    <h2>Posts</h2>
            {{ render(controller('AppBundle:Tag:postsTag', {'tag': tag.slug})) }}
            <a href="{{ path('oktothek_tag_posts_page', {'slug': tag.slug}) }}">{{ 'oktothek_tag_more_results'|trans }}</a>
		</section>
		<section class="container">
		    <div id="anchor_pages"></div>
		    <h2>Seiten</h2>
            {{ render(controller('AppBundle:Tag:pagesTag', {'tag': tag.slug})) }}
            <a href="{{ path('oktothek_tag_pages_page', {'slug': tag.slug}) }}">{{ 'oktothek_tag_more_results'|trans }}</a>
        </section>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .bg-bleur {
            {% if background_episode is not empty %}
                background-image:url( {{ background_episode.posterframe|path() }});
            {% endif %}
        }
    </style>
{% endblock %}
