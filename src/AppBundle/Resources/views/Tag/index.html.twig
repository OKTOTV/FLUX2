{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "head-white-color" %}
{% block body_main %}
    <div class="page-header">
        <h1># {{ 'oktothek.tag_index_header'|trans }}</h1>
        <a href="{{ path('oktothek_tag_new')}}" class="btn btn-default">{{ 'oktothek.tag_new_button'|trans|raw }}</a>
    </div>
	<section>
        <ul class="list-group">
            {% for tag in tags %}
                <li class="list-group-item"><a href="{{ path('oktothek_tag_show', {'slug': tag.slug}) }}">{{ tag.text }}</a></li>
            {% endfor %}
        </ul>
	</section>
{% endblock %}
