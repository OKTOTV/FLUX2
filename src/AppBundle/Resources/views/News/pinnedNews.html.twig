<section class="news container">
    <div id="anchor_news"></div>
    <h2>{{ 'oktothek_news_pinned_header'|trans }}</h2>
    {% for post in posts %}
        <article class="row pin" title="{{ post.name }}">
            <a href="{{ path('oktothek_show_news', {'slug': post.slug})}}" title="{{ post.name }}">
                <figure class="col-md-3 col-lg-3 col-sm-6 col-xs-12 pin">
                    {% if post.assets is defined %}
                        {% if post.assets[0]|isImage() %}
                            <img src="{{ post.assets[0]|thumb(200, 263) }}" alt="{{ post.name }}" />
                        {% endif %}
                    {% endif %}
                </figure>
            </a>
            <div class="news-pin pin col-md-9 col-lg-9 col-sm-6 col-xs-12">
                <p class="tags">
                {% for tag in post.tags %}
                    <a class="tag" href="{{ path('oktothek_tag_show', {'slug': tag.slug}) }}" title="{{ tag }}">{{ tag }}</a>
                {% endfor %}
                </p>
                <h3><a href="{{ path('oktothek_show_news', {'slug': post.slug})}}" title="{{ post.name }}">{{ post.name }}</a></h3>
                <p>{{ post.teaser|nl2br }}</p>
            </div>
        </article>
    {% endfor %}
    {% if posts is empty %}
        {{ 'oktothek_news_no_pins'|trans }}
    {% endif %}
    <a href="{{ path('oktothek_news')}}" class="pull-right more" title="{{ 'oktothek.newest_news_show_more'|trans}}">{{ 'oktothek.newest_news_show_more'|trans}}</a>
</section>
