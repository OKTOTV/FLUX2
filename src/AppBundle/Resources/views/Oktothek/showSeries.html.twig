{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "head-white-color" %}
{% block body %}
    <div class="series">
        <div class="series-ident">
            <img src="{{ series.posterframe|path() }}" />
        </div>
        <div class="series-name">
            {{ series.name }}
        </div>
        <div class="series-description">
            {{ series.description }}
        </div>
    </div>
    <div class="container">
        <div class="more">
            <h1>{{ 'oktothek_show_series.more_from_this_series'|trans }}</h1>
            {% include 'AppBundle::Default/EpisodeStack.html.twig' with {'episodes': series.episodes} %}
        </div>
	</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip({'placement': 'auto top'});
    });
</script>
{% endblock %}
