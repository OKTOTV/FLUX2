{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "episode head-white-color" %}
{% block body %}
    <div class="container-fluid">
        <section class="container">
            <figure id="player">
                {% if episode.video is empty %}
                    <img src="{{ episode.posterframe|path }}" class="img-responsive" />
                {% endif %}
            </figure>
			<article>
                <p class="series">
                    <a href="{{ path('oktothek_show_series', {'uniqID': episode.series.uniqID}) }}" title="Mehr über {{ episode.series.name }} erfahren">{{ episode.series.name }}</a>
                </p>
                <h1 class="name">{{ episode.name }}???</h1>
                <time pubdate="pubdate">online seit {{ episode.onlineStart|date('d.m.Y')}}</time>
                <p class="description">
                    {{ episode.description }}
                </p>
                <p class="misc">
                    <a href="#" id="favorite" data-uniqID="{{episode.uniqID}}" title="Favorite Video"><span class="glyphicon glyphicon-heart-empty"></span> {{ episode.users|length}}</a> <span class="views"><span class="icon-views"></span>0</span> <a href="#" class="btn btn-default" title="{{ episode.name }} teilen">Teilen</a> <a href="#" class="btn btn-default" title="e{{ episode.series.name }} abbonieren">Abbonieren</a> <a href="#" class="btn btn-default" title="{{ episode.name }} zur Playlist hinzuf&uuml;gen">Zur Playlist hinzufügen</a>
                </p>
			</article>
        </section>
		<!-- Kommentare -->
		<section class="comments body-white-color">
		  <div class="container">
		    <h2>Kommentare <span class="comments-counter">1</span></h2>
			<!-- Kommentar -->
			<article class="row">
			    <!--<div class="avatar col-md-1"><img src="/images/default_avatar.png" class="img-responsive" width=50 height=50/></div>-->
			    <div class="col-md-11">
			        <div class="author">Klara <time>am 14.Juli 2015<time></div>
					<div class="comment-text">
				        <h4>Aswan</h4>
                        <p>Aswan TV: Freiheit für SyrienIn dieser Folge zeigt Aswan TV wie viele Stimmen es in Österreich für ein Freies Syrien gibt und wie wichtig es ist diese wahrzunehmen und ihnen Gehör zu verschaffen. Bei der wöchentlichen Reunion an Stephansplatz werden die Situation Syriens thematisiert und für syrische Bedürftige Spenden gesammelt. Verschiedene Perspektiven und Ansichten werden dieskutiert.  Menschen, die sich für Frieden und Demokratie engagieren, kommen zu Wort.
				        </p> 
					</div>
					<!-- Antwort Container -->
					<div class="comment-answer">
					    <a class="answer" role="button" data-toggle="collapse" href="#answer_comment_1" aria-expanded="false" aria-controls="answer_comment_1">Antworten</a>
						<div class="answer-text collapse" id="answer_comment_1">
						    <div class="row comment-form">
							    <!--<div class="avatar col-md-1"><img src="/images/default_avatar.png" class="img-responsive" width=50 height=50/></div>-->
			                    <div class="col-md-11">
						            <form action="#" id="form_answer_comment_1" method="POST">
			                            <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Schreibe eine Antwort...">
                                            <span class="input-group-btn"><button class="btn btn-default" type="button">Senden</button></span>
						                </div>
			                        </form>
								</div>
							</div>
							<!-- Antwort -->
							<div class="row">
							    <!--<div class="avatar col-md-1"><img src="/images/default_avatar.png" class="img-responsive" width=50 height=50/></div>-->
			                    <div class="col-md-11">
								    <div class="author">Klara <time>am 14.Juli 2015<time></div>
									<div class="comment-text">
								        <h4>Hallo!</h4>
								        <p>Und ich bin die Antwort!!!</p>
								    </div>
								</div>
							</div>
							<!-- Ende Antwort -->
						</div>
				    </div>
					<!-- Ende Antwort Container -->
			    </div>
			</article>
			<div class="row">
			    <a href="#" class="pull-right more" title="&Auml;ltere Kommentare anzeigen">&Auml;ltere Kommentare anzeigen <span class="glyphicon glyphicon-chevron-right"></span></a>
			</div>
			<!-- Ende Kommentar -->
			<div class="row comment-form">
			    <!--<div class="avatar col-md-1"><img src="/images/default_avatar.png" class="img-responsive" width=50 height=50/></div>-->
			    <div class="col-md-11">
				    <form action="#" id="comments" method="POST">
			            <div class="input-group">
                            <input type="text" class="form-control" placeholder="Schreibe ein Kommentar...">
                            <span class="input-group-btn"><button class="btn btn-default" type="button">Senden</button></span>
						</div>
			        </form>
				</div>
			</div>
		  </div>
        </section>
		<!-- Ende Kommentare -->
		<section class="container tags">
		    <h2>Tags</h2>
		    <ul>
			    <li><a href="#" title="Krieg">Krieg</a></li>
                <li><a href="#" title="Freiheit">Freiheit</a></li>
                <li><a href="#" title="Arabisch">Arabisch</a></li>
                <li><a href="#" title="Kulturen">Kulturen</a></li>
                <li><a href="#" title="Syrien">Syrien</a></li>
                <li><a href="#" title="Demonstration">Demonstration</a></li>
                <li><a href="#" title="Andere Sprachen">Andere Sprachen</a></li>
                <li><a href="#" title="Zivilgesellschaft">Zivilgesellschaft</a></li>
			</ul>
		</section>
        <section class="container more-clips">
            <h2>{{ 'oktothek_show_epis>de.more_from_this_series'|trans }}</h2>
			<select class="form-control">
			    <option>Krieg</option>
				<option>Freiheit</option>
                <option>Arabisch</option>
                <option>Kulturen</option>
                <option>Syrien</option>
                <option>Demonstration</option>
                <option>Andere Sprachen</option>
                <option>Zivilgesellschaft</option>
			</select>
            {% include 'AppBundle::Default/EpisodeStack.html.twig' with {'episodes': related} %}
        </section>
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="http://content.jwplatform.com/libraries/qecJHTsP.js"></script>
    {% if episode.video is not empty %}
        <script type="text/javascript">
            var playerInstance = jwplayer("player");
            playerInstance.setup({
                file: "{{ episode.video|path }}",
                image: "{{ episode.posterframe|path }}"
            });
        </script>
    {% endif %}
    <script type="text/javascript">
        $('[data-toggle="tooltip"]').tooltip({'placement': 'auto top'});
        $('#favorite').click(function(e){
            e.preventDefault();
            // console.log('clicked favorite');
            $.ajax({
                url: "{{ path('backend_add_favourite') }}",
                data: { 'uniqID': '{{ episode.uniqID }}', 'type': 'episode'},
                type: 'POST',
                success: function(data) {
                    // console.log('success');
                    $(this)
                }
            })
        });
    </script>
{% endblock %}
