{% extends "BprsStyleBundle::layout.html.twig" %}
{% block title %}{{ name|default('OKTO')~' | '~page.title }}{% endblock %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': '', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "page" %}
{% block body %}
<div class="container content">
    {% if page.id is empty %}
        <a href="#" onclick="goBack();return false;" class="btn btn-default">{{ 'oktothek.page_preview_back_button'|trans }}</a>
    {% else %}
        {% if is_granted('ROLE_USER')%}
            <a href="{{ path('oktothek_page_edit', {'page': page.id})}}" class="btn btn-default">{{ 'oktothek.page_edit_button'|trans|raw }}</a>
        {% endif %}
    {% endif %}
    <header class="page-header">
        <h1>{{ page.title }}</h1>
    </header>
    {{ page.text|markdown() }}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    function goBack() {
        window.history.back();
    }
</script>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/pages.css') }}" rel="stylesheet" />
{% endblock %}