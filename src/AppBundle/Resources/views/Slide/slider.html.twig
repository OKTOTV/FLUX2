<div class="preloader"></div>
<div id="carousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
      {% for slide in slides %}
        <li data-target="#carousel" data-slide-to="{{ loop.index0 }}" {% if loop.index0 == 0 %}class="active"{% endif %}></li>
      {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {% for slide in slides %}
        <figure class="item {% if loop.index0 == 0 %}active{% endif %}">
            <a href="{{ slide.link }}">
                <img src="{{ slide.asset|thumb(720,1280)}}" alt="{{ slide.name }}" style="width:100%">
                <figcaption class="carousel-caption">
				    <div class="container-bg-opacity">
			            <div class="bg-opacity"></div>
				    </div>
				    <div class="content-opacity">
					    <p class="type">Episode</p>
                        <h3>{{ slide.name }}</h3>
			            <p class="slide-content subheadline">Weil wir bei Okto den Perspektivenwechsel lieben und neue Blickwickel sch√§tzen, haben wir das Hochladen von Videos jetzt katzenleicht gemacht.</p>
				    </div>
                </figcaption>
            </a>
        </figure>
    {% endfor %}
  </div>
