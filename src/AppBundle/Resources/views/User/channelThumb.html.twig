<article class="col-md-3 col-lg-3 col-sm-6 col-xs-6 pin" title="{{ channel.series.description }}">
    <figure class="episode-pin pin">
        <a href="{{ path('oktothek_show_series', {'uniqID': channel.series.uniqID}) }}" title="{{ channel.series.name }}"><img src="{{ channel.series.posterframe|thumb(135,240) }}" class="img-responsive"/></a>
        <div class="pin-icon"><span class="glyphicon glyphicon-heart"></span> {{ channel.series.abonnements|length }}</div>
        <figcaption>
            <h3><a href="{{ path('oktothek_show_series', {'uniqID': channel.series.uniqID}) }}" title="{{ channel.series.name }} ansehen">{{ channel.series.name }}</a></h3>
            </figcaption>
        </figure>
</article>
