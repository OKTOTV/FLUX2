{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'backend', 'dropdown': ''} %}
{% endblock %}
{% block body_main %}

<ul class="nav nav-tabs">
  <li role="presentation"><a href="{{ path('oktothek_backend_slide_index')}}">{{ 'oktothek.backend_slider_header'|trans}}</a></li>
  <li role="presentation" class="active"><a href="{{ path('oktothek_backend_news_index')}}">{{ 'oktothek.backend_news_header'|trans }}</a></li>
</ul>
<div class="page-header">
    <h1>{{ 'oktothek.backend_news_header'|trans}}</h1>
    <a href="{{ path('oktothek_backend_news_new') }}" class="btn btn-default">{{'oktothek_backend_news_new'|trans|raw }}</a>
</div>

<div class="list-group">
    {% for post in posts %}
        <a href="{{ path('oktothek_backend_news_show', {'post': post.id})}}" class="list-group-item">{{ post.name }}</a>
    {% endfor %}
</div>

{% endblock %}
