{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek_backend', 'dropdown': ''} %}
{% endblock %}
{% block body_main %}
    <div class="page-header">
        <h1>{{ attendee }}</h1>
        <!-- Single button -->
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ 'oktothek_backend_show_course_dropdown'|trans|raw }}
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a href="{{ path('oktothek_backend_attendee_index') }}">
                        {{ 'oktothek.backend_attendee_show_back_to_index'|trans|raw }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('oktothek_backend_move_attendee', {'attendee': attendee.id})}}">
                        {{ 'oktothek.backend_attendee_move_to_course'|trans|raw }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('oktothek_backend_edit_attendee', {'attendee': attendee.id})}}">
                        {{ 'oktothek.backend_attendee_edit'|trans|raw }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('oktothek_backend_edit_paymentstatus', {'attendee': attendee.id}) }}">
                        {{ 'oktothek.backend_attendee_update_paymentstatus'|trans|raw }}
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>
                    {{ 'attendee_info_present'|trans }}
                </td>
                <td>
                    {{ 'attendee_info_present_choice'|transchoice(attendee.present)}}
                </td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_name'|trans }}</td>
                <td>{{ attendee.name }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_surname'|trans }}</td>
                <td>{{ attendee.surname }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_email'|trans }}</td>
                <td>{{ attendee.email }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_tel'|trans }}</td>
                <td>{{ attendee.tel }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_reduced'|trans }}</td>
                <td>{{ 'attendee_info_reduced_choice'|transchoice(attendee.reducedEligible) }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_transactionId'|trans }}</td>
                <td>{{ attendee.transactionId }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_info'|trans }}</td>
                <td>{{ attendee.info|nl2br }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_paymentStatus'|trans }}</td>
                <td>{{ attendee.paymentStatus|trans }}</td>
            </tr>
            <tr>
                <td>{{ 'attendee_info_updatedAt'|trans }}</td>
                <td>{{ attendee.updatedAt|date('H:i d.m.Y') }}</td>
            </tr>
            <tr>
                <td>
                    {{ 'attendee_info_adress'|trans }}
                </td>
                <td>
                    {{ attendee.adress }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'attendee_info_zipcode'|trans }}
                </td>
                <td>
                    {{ attendee.zipcode }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'attendee_info_city'|trans }}
                </td>
                <td>
                    {{ attendee.city }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'attendee_info_country'|trans }}
                </td>
                <td>
                    {{ attendee.countryname }}
                </td>
            </tr>

            {% if attendee.courses is not empty %}
                {% for course in attendee.courses %}
                <tr>
                    <td>{{ 'attendee_info_course'|trans }}</td>
                    <td><a href="{{ path('oktothek_backend_show_course', {'course': course.id})}}">{{ course.coursetype }}</a></td>
                </tr>
                {% endfor %}
            {% endif %}
        <tbody>
    </table>

{% endblock %}
