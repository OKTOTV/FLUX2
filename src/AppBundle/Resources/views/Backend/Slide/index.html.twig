{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'backend', 'dropdown': ''} %}
{% endblock %}
{% block body_main %}

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="{{ path('oktothek_backend_slide_index')}}">{{ 'oktothek.backend_slider_header'|trans}}</a></li>
</ul>
<div class="page-header">
    <h1>{{ 'oktothek.backend_slider_header'|trans}}</h1>
    <a href="{{ path('oktothek_backend_slide_new') }}" class="btn btn-default">{{'oktothek_backend_slide_new'|trans|raw }}</a>
</div>

<div class="list-group">
{% for slide in slides %}
    <a href="{{ path('oktothek_backend_slide_edit', {'slide': slide.id})}}" class="list-group-item">{{ slide.name }}</a>
{% endfor %}
</div>

{% endblock %}
