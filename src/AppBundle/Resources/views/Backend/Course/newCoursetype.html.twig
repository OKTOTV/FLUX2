{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'backend', 'dropdown': ''} %}
{% endblock %}
{% block body %}
<div class="page-header">
    <h1>{{ 'oktothek.backend_new_coursetype_header'|trans}}</h1>
</div>
{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price)}}
    {{ form_row(form.price_reduced)}}
    {% include "BprsAssetBundle::singleUpload.html.twig" with {'widget': form.image, 'adapter': 'posterframe', 'type': 'single'} %}
    {% include "BprsAssetBundle::singleUpload.html.twig" with {'widget': form.assets, 'adapter': 'posterframe', 'type': 'multiple'} %}
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
{% include "BprsAssetBundle::singleUpload.js.twig" %}
<script src="{{ asset('bundles/bprsstyle/js/charactercounter.js')}}"></script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% include "BprsAssetBundle::singleUpload.css.twig" %}
{% endblock %}
