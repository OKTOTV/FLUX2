{% extends "BprsStyleBundle::layout.html.twig" %}
{% block metas %}
<meta name="description" content="{{ 'oktothek_participate_meta_description'|trans }}">
{% endblock %}
{% block title %}{{ 'oktothek_participate_title'|trans }}{% endblock %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'participate', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "participate" %}
{% block body %}
<div class="container planet_container">
    <div id="top"></div>
    <section id="univers">
        <h1 class="sr-only">{{ 'oktothek_participate_sr_header'|trans }}</h1>
        <div id="planets">
            <!-- 1 -->
            <div class="cloud9-item color1 clearfix">
                <figure>
                <img src="{{ asset('bundles/app/images/heinrich.svg')}}" width="300" height="200" alt="{{ 'oktothek_participate_praktikantinnen_header'|trans }}"/>
                <figcaption>
                    <div class="title-container"><a href="#">{{ 'oktothek_participate_praktikantinnen_header'|trans }}</a></div>
                </figcaption>
                </figure>

                 <nav class="subnav-item1 nav sub-right">
                    <button type="button" class="close visible-xs-block visible-sm-block" aria-label="{{ 'oktothek_participate_nav_close'|trans }}"><span aria-hidden="true">&times;</span></button>
                    <ul>
                        <li><div class="dot"><hr></div><a href="https://www.okto.tv/de/series/5819f4e14361a" itemprop="significantLink"><span class="icon"></span>{{ 'oktothek_participate_praktikantinnen_link1'|trans }}</a></li>
                        <li><div class="dot"><hr></div><a href="https://www.okto.tv/de/page/praktikum" itemprop="significantLink"><span class="icon glyphicon glyphicon-camera"></span>{{ 'oktothek_participate_praktikantinnen_link2'|trans }}</a></li>
                    </ul>
                 </nav>
            </div>
            <!-- 2 -->
            <div class="cloud9-item color2 clearfix">
                <figure>
                <img src="{{ asset('bundles/app/images/planet1.svg')}}" width="250" height="250" alt="{{ 'oktothek_participate_perspektivenwechsel_header'|trans }}"/>
                <figcaption>
                    <div class="title-container"><a href="#">{{ 'oktothek_participate_perspektivenwechsel_header'|trans }}</a></div>
                </figcaption>
                </figure>

                <nav class="subnav-item2 nav sub-right">
                    <button type="button" class="close visible-xs-block visible-sm-block" aria-label="{{ 'oktothek_participate_nav_close'|trans }}"><span aria-hidden="true">&times;</span></button>
                    <ul>
                        <li><div class="dot"><hr></div><a href="https://youtu.be/ghKqtslorX8?list=PLvqnJeIyZZwNudPq5E3abGR4wCtDu1iKw" target="_blank" itemprop="significantLink"><span class="icon glyphicon glyphicon-plane"></span>{{ 'oktothek_participate_perspektivenwechsel_link1'|trans }}</a></li>
                    </ul>
                </nav>
            </div>
            <!-- 3 -->
            <div class="cloud9-item color5 clearfix">
                <figure>
                <img src="{{ asset('bundles/app/images/satelit.svg')}}" width="250" height="250" alt="{{ 'oktothek_participate_kontakt_header'|trans }}"/>
                <a href="#" class="click_figure visible-xs-block visible-sm-block"></a>
                <figcaption>
                    <div class="title-container"><a href="#">{{ 'oktothek_participate_kontakt_header'|trans }}</a></div>
                </figcaption>
                </figure>
                <nav class="subnav-item3 nav sub-right">
                    <button type="button" class="close visible-xs-block visible-sm-block" aria-label="{{ 'oktothek_participate_nav_close'|trans }}"><span aria-hidden="true">&times;</span></button>
                    <ul>
                        <li><div class="dot"><hr></div><a href="mailto:support@okto.tv" itemprop="significantLink"><span class="icon"></span>{{ 'oktothek_participate_kontakt_link1'|trans }}</a></li>
                        <li><div class="dot"><hr></div><a href="mailto:feedback@okto.tv" itemprop="significantLink"><span class="icon"></span>{{ 'oktothek_participate_kontakt_link2'|trans }}</a></li>
                    </ul>
                </nav>
            </div>
            <!-- 4 -->
            <div class="cloud9-item color3 clearfix">
                <figure>
                <img src="{{ asset('bundles/app/images/planet2.svg')}}" width="250" height="250" alt="{{ 'oktothek_participate_workshops_header'|trans }}"/>
                <a href="#" class="click_figure visible-xs-block visible-sm-block"></a>
                <figcaption>
                    <div class="title-container"><a href="#">{{ 'oktothek_participate_workshops_header'|trans }}</a></div>
                </figcaption>
                </figure>
                <nav class="subnav-item4 nav sub-left">
                    <button type="button" class="close visible-xs-block visible-sm-block" aria-label="{{ 'oktothek_participate_nav_close'|trans }}"><span aria-hidden="true">&times;</span></button>
                    <ul>
                        <li><div class="dot"><hr></div><a href="https://www.okto.tv/de/workshops/" itemprop="significantLink">{{ 'oktothek_participate_workshops_link1'|trans }}<span class="icon glyphicon glyphicon-education"></span></a></li>
                        <li><div class="dot"><hr></div><a href="https://www.okto.tv/de/workshops/5" itemprop="significantLink">{{ 'oktothek_participate_workshops_link2'|trans }}<span class="icon"></span></a></li>
                    </ul>
                </nav>
            </div>
            <!-- 5 -->
            <div class="cloud9-item color4 clearfix">
                <figure>
                <img src="{{ asset('bundles/app/images/planet3.svg')}}" width="250" height="250" alt="{{ 'oktothek_participate_produzentinnen_header'|trans }}"/>
               <a href="#" class="click_figure visible-xs-block visible-sm-block"></a>
                <figcaption>
                    <div class="title-container"><a href="#">{{ 'oktothek_participate_produzentinnen_header'|trans }}</a></div>
                </figcaption>
                </figure>
                <nav class="subnav-item5 nav sub-left">
                    <button type="button" class="close visible-xs-block visible-sm-block" aria-label="{{ 'oktothek_participate_nav_close'|trans }}"><span aria-hidden="true">&times;</span></button>
                    <ul>
                        <li><div class="dot"><hr></div><a href="http://intake.okto.tv" target="_blank" itemprop="significantLink">{{ 'oktothek_participate_produzentinnen_link1'|trans }}<span class="icon"></span></a></li>
                        <li><div class="dot"><hr></div><a href="https://www.facebook.com/groups/559405997508690/?fref=ts" target="_blank" itemprop="significantLink">{{ 'oktothek_participate_produzentinnen_link2'|trans }}<span class="icon"></span></a></li>
                    </ul>
                </nav>
                <nav class="subnav-item5 nav sub-right">
                    <ul>
                        <li><div class="dot"><hr></div><a href="https://www.okto.tv/de/oktothek/episode/59075661cab7d" itemprop="significantLink"><span class="icon"></span>{{ 'oktothek_participate_produzentinnen_link3'|trans }}</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>
<video autoplay loop id="participate_video" poster="{{ asset('bundles/app/images/sternenhimmel.jpg') }}">
        <source src="{{ asset('bundles/app/videos/sternenhimmel.mp4') }}" type="video/mp4">
        <source src="{{ asset('bundles/app/videos/sternenhimmel.ogg') }}" type="video/ogg">
    </video>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/jquery.cloud9carousel.js') }}"></script>
    <script src="{{ asset('bundles/app/js/javascript_participate.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/participate.css') }}" rel="stylesheet" />
{% endblock %}
