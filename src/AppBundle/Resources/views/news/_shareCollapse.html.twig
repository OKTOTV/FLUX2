<!-- Start Collapse Share-->
<div class="collapse collapseShare collapseWindow col-lg-12 col-md-12 col-sm-12 col-xs-12" id="collape-{{ newsloop|default('1') }}">
    <div class="collapse-header">
        <div class="triangle"></div>
    </div>
    <div class="collapse-content">
        <h3>Teilen</h3>
        <div class="row">
            <form class="col-lg-6 col-md-6 col-sm-12 col-xs-12"><input type="text" value="{{ url('oktothek_show_news', {'slug': post.slug})}}" class="form-control"></form>
            <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12 share-buttons">
                <ul class="socialnetworks">
                    {% set share_url = url('oktothek_show_news', {'slug': post.slug})|url_encode %}
                    <li>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ share_url }}&t={{ post.name|url_encode }}" class="icon-facebook" target="_blank" title="{{ 'oktothek.snippedEpisodeShare_title_fb'|trans }}">
                            <span itemprop="recipient">{{ 'oktothek_series.share_fb'|trans }}</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/intent/tweet?url={{ share_url }}" class="icon-twitter" target="_blank" title="{{ 'oktothek.snippedEpisodeShare_title_tw'|trans }}">
                            <span itemprop="recipient">{{ 'oktothek_series.share_tw'|trans }}
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/share?url={{ share_url }}" class="icon-googleplus" target="_blank" title="{{ 'oktothek.snippedEpisodeShare_title_gp'|trans }}">
                            <span itemprop="recipient">{{ 'oktothek_series.share_gp'|trans }}
                            </span>
                        </a>
                    </li>
                </ul>
                <a href="mailto:?to=&subject={{ post.name }}&body={{ url('oktothek_show_news', {'slug': post.slug}) }}" class="btn btn-default">{{ 'oktothek_share_email'|trans }}</a>
           </div>
       </div>
   </div>
</div>
<!-- End Collapse Share-->
