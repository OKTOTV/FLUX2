{% extends "BprsStyleBundle::layout.html.twig" %}
{% block title %}{{ name|default('OKTO')~' | '~'oktothek_academy_header'|trans }}{% endblock %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'academy', 'dropdown': ''} %}
{% endblock %}

{% set body_class = "academy" %}
{% block body_main %}
    <div class="page-header">
        <h1>{{ coursepackage }}</h1>
    </div>

    <p>{{ coursepackage.description }}</p>
    <a href="{{ path('oktothek_academy_book_coursepackage', {'coursepackage': coursepackage.id}) }}" title="{{ 'oktothek_academy_sCp_book_title'|trans({'%title%': coursepackage}) }}">{{ 'oktothek_academy_sCp_book'|trans }}</a>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/academy.css') }}" rel="stylesheet" />
{% endblock %}
