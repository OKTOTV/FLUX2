{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'oktothek_backend', 'dropdown': ''} %}
{% endblock %}
{% block body_main %}
<div class="page-header">
    <h1>{{ 'oktothek.backend_edit_coursetype_header'|trans}}</h1>
</div>
{{ form_start(form) }}
    {{ form_errors(form)}}
    {{ form_row(form.title) }}
    {{ form_row(form.teaser) }}
    <div class="row">
        <div class="col-md-8">
            {{ form_row(form.description) }}
        </div>
        <div class="col-md-4">
            {% include "AppBundle::default/markdown_helper.html.twig" %}
        </div>
    </div>
    {{ form_row(form.price)}}
    {{ form_row(form.price_reduced)}}
    {% include "BprsAssetBundle::singleUpload.html.twig" with {'widget': form.image, 'adapter': 'posterframe', 'type': 'single', 'asset': coursetype.image} %}
    {% include "BprsAssetBundle::singleUpload.html.twig" with {'widget': form.assets, 'adapter': 'posterframe', 'type': 'multiple', 'assets': coursetype.assets} %}
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% include "BprsAssetBundle::singleUpload.js.twig" %}
<script src="{{ asset('bundles/bprsstyle/js/charactercounter.js')}}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $(".character230").characterCounter({
            counterCssClass: 'help-block',
            limit: 230
        });
    });
</script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% include "BprsAssetBundle::singleUpload.css.twig" %}
{% endblock %}
